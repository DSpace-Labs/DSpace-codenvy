{
  "name": "dspace-with-db8",
  "id": "stack9vbtzqfftc5nsvpp",
  "scope": "general",
  "source": {
    "type": "image",
    "origin": "eclipse/ubuntu_jdk8"
  },
  "description": "Designed for running DSpace 6.",
  "components": [
    {
      "name": "JDK",
      "version": "1.8.0_45"
    },
    {
      "name": "Maven",
      "version": "3.2.2"
    },
    {
      "name": "Tomcat",
      "version": "8.0.24"
    },
    {
      "name": "Ant",
      "version": "1.10.2"
    }
  ],
  "workspaceConfig": {
    "name": "dspace-with-db5-4G",
    "environments": {
      "default": {
        "machines": {
          "db": {
            "attributes": {
              "memoryLimitBytes": "536870912"
            },
            "servers": {},
            "agents": [
              "org.eclipse.che.terminal",
              "org.eclipse.che.exec"
            ]
          },
          "dev-machine": {
            "attributes": {
              "memoryLimitBytes": "2684354560"
            },
            "servers": {},
            "agents": [
              "org.eclipse.che.ssh",
              "org.eclipse.che.ws-agent",
              "org.eclipse.che.terminal",
              "org.eclipse.che.exec"
            ]
          }
        },
        "recipe": {
          "type": "compose",
          "content": "services:\n db:\n  image: 'terrywbrady/dspacedb:latest'\n  mem_limit: 536870912\n  environment:\n   PGDATA: /home/user/pgdata\n dev-machine:\n  image: 'terrywbrady/dspace:latest'\n  mem_limit: 2684354560\n  depends_on:\n   - db\n",
          "contentType": "application/x-yaml"
        }
      }
    },
    "commands": [
      {
        "name": "7. repair sequences after AIP restore (db server)",
        "type": "custom",
        "attributes": {},
        "commandLine": "psql -U dspace -c \"SELECT setval('handle_seq', CAST ( max(to_number(regexp_replace(handle, '.*/', ''), '999999999999')) AS BIGINT)) FROM handle WHERE handle SIMILAR TO '%/[0123456789]*';\""
      },
      {
        "name": "0. refresh from git",
        "type": "custom",
        "attributes": {},
        "commandLine": "cd ${current.project.path};git pull origin master"
      },
      {
        "name": "1. install local.cfg",
        "type": "Build",
        "attributes": {},
        "commandLine": "cp ${current.project.path}/CodenvyConfig/local.cfg ${current.project.path}"
      },
      {
        "name": "2. mvn build",
        "type": "Build",
        "attributes": {},
        "commandLine": "cd ${current.project.path};mvn package"
      },
      {
        "name": "3. ant build",
        "type": "Build",
        "attributes": {},
        "commandLine": "cd ${current.project.path}/dspace/target/dspace-installer;ant update"
      },
      {
        "name": "4. create administrator ",
        "type": "Build",
        "attributes": {},
        "commandLine": "/home/user/dspace/bin/dspace create-administrator -e test@test.edu -f Admin -l User -p admin -c en"
      },
      {
        "name": "5. start tomcat",
        "type": "Run",
        "attributes": {
          "previewUrl": "${server.8080}xmlui"
        },
        "commandLine": "export JAVA_OPTS=-Xmx1300m;/home/user/tomcat8/bin/catalina.sh run"
      },
      {
        "name": "6. load sample data from AIP",
        "type": "Run",
        "attributes": {},
        "commandLine": "cd ${current.project.path}/TestData;for file in COMM* COLL* ITEM*; do /home/user/dspace/bin/dspace packager -r -t AIP -e test@test.edu -f -u $file;done"
      }
    ],
    "projects": [
      {
        "name": "DSpace-codenvy",
        "path": "/DSpace-codenvy",
        "attributes": {},
        "source": {
          "location": "https://github.com/DSpace-Labs/DSpace-codenvy.git",
          "type": "git",
          "parameters": {}
        },
        "description": "",
        "links": [],
        "problems": [],
        "mixins": []
      }
    ],
    "defaultEnv": "default",
    "links": []
  },
  "tags": [
    "Java 1.8, Tomcat 8, MySQL 5.7, Ant 1.10.2"
  ],
  "creator": "user7h4bmyl4ya6roowy"
}